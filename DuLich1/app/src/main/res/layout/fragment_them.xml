<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/f"

    android:background="#FFFFFF"
    tools:context="com.thu.dulich1.ThemFragment">

    <ScrollView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sc"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mota"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="text|textMultiLine|textCapSentences"
                android:maxLines="3"
                android:gravity="top"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="18dp"
                android:id="@+id/mota"
                android:hint="Mô tả bài viết!"
                android:background="@drawable/custom_mota"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:background="@drawable/custom_mota"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:inputType="text|textMultiLine|textCapSentences"
                android:maxLines="6"
                android:gravity="top"
                android:singleLine="false"
                android:layout_below="@+id/mota"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="18dp"
                android:id="@+id/chitiet"
                android:hint="Chi tiết bài viết!"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/chitiet"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/ivImages"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:paddingTop="10dp"
        android:background="#FCFCFC"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView

            android:width="7dp"
            android:height="7dp"
            android:background="@drawable/photo_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/chonanh" />
        <ImageView
            android:layout_marginLeft="25dp"
            android:background="@drawable/gps"
            android:width="7dp"
            android:height="7dp"
            android:id="@+id/gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <ImageView
            android:layout_marginLeft="25dp"
            android:width="7dp"
            android:height="7dp"
            android:background="@drawable/camera_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera" />
        <ImageView
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="10dp"
            android:width="7dp"
            android:height="7dp"
            android:background="@drawable/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dang" />
    </LinearLayout>
</RelativeLayout>
